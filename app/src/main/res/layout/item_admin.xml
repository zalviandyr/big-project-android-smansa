<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    app:cardCornerRadius="20dp"
    app:cardElevation="1dp"
    app:cardMaxElevation="1dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/civ_foto_profil_admin_item"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignParentStart="true"
                android:background="@drawable/bg_oranye_radius"
                android:padding="5dp"
                android:src="@drawable/icons8_user_40"
                android:tint="@android:color/white" />

            <TextView
                android:id="@+id/tv_nama_admin_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@id/civ_foto_profil_admin_item"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                tools:text="Zukron Alviandy R" />
        </RelativeLayout>

        <com.google.android.material.button.MaterialButtonToggleGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|end">

            <Button
                android:id="@+id/btn_edit_admin_item"
                style="@style/Widget.App.Button.OutlinedButton.IconOnly"
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:icon="@drawable/ic_mode_edit_black_24dp" />

            <Button
                android:id="@+id/btn_delete_admin_item"
                style="@style/Widget.App.Button.OutlinedButton.IconOnly"
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:icon="@drawable/ic_delete_black_24dp" />
        </com.google.android.material.button.MaterialButtonToggleGroup>
    </LinearLayout>
</androidx.cardview.widget.CardView>